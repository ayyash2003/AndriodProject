<?xml version="1.0" encoding="utf-8"?>

<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/main"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#B3BDB3"
        android:padding="40dp"
        tools:context=".MainActivity">


        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/guideline"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            app:layout_constraintGuide_percent="0.0" />

        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/guideline2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            app:layout_constraintGuide_percent="0.0" />

        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/guideline3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            app:layout_constraintGuide_percent="1.0" />

        <ImageView
            android:id="@+id/imageView"
            android:layout_width="297dp"
            android:layout_height="53dp"
            android:layout_marginStart="12dp"
            android:layout_marginTop="4dp"
            app:layout_constraintEnd_toStartOf="@+id/guideline3"
            app:layout_constraintHorizontal_bias="0.409"
            app:layout_constraintStart_toStartOf="@+id/guideline2"
            app:layout_constraintTop_toTopOf="@+id/guideline"
            app:srcCompat="@drawable/add" />

        <TextView
            android:id="@+id/titlelbl"
            android:layout_width="45dp"
            android:layout_height="38dp"
            android:layout_marginTop="28dp"
            android:text="Title"
            android:textAppearance="@style/TextAppearance.AppCompat.Body2"
            android:textSize="20sp"
            app:layout_constraintEnd_toStartOf="@+id/guideline3"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="@+id/guideline2"
            app:layout_constraintTop_toBottomOf="@+id/imageView" />

        <EditText
            android:id="@+id/titleFld"
            style="@style/AddTextFields"
            android:layout_marginTop="16dp"
            android:inputType="text"
            app:layout_constraintEnd_toStartOf="@+id/guideline3"
            app:layout_constraintHorizontal_bias="0.84"
            app:layout_constraintStart_toEndOf="@+id/titlelbl"
            app:layout_constraintTop_toBottomOf="@+id/imageView" />

        <TextView
            android:id="@+id/typelbl"
            android:layout_width="61dp"
            android:layout_height="48dp"
            android:layout_marginTop="24dp"
            android:text="Type"
            android:textAppearance="@style/TextAppearance.AppCompat.Body2"
            android:textSize="18sp"
            app:layout_constraintEnd_toStartOf="@+id/guideline3"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="@+id/guideline2"
            app:layout_constraintTop_toBottomOf="@+id/titlelbl" />

        <Spinner
            android:id="@+id/typeSpin"
            style="@style/spinner"
            android:layout_width="199dp"
            android:layout_height="45dp"
            android:layout_marginTop="24dp"
            app:layout_constraintEnd_toStartOf="@+id/guideline3"
            app:layout_constraintHorizontal_bias="0.887"
            app:layout_constraintStart_toEndOf="@+id/typelbl"
            app:layout_constraintTop_toBottomOf="@+id/titleFld" />

        <TextView
            android:id="@+id/destinationlbl"
            android:layout_width="105dp"
            android:layout_height="38dp"
            android:layout_marginTop="40dp"
            android:text="Destination"
            android:textAppearance="@style/TextAppearance.AppCompat.Body2"
            android:textSize="17sp"
            app:layout_constraintEnd_toStartOf="@+id/guideline3"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="@+id/guideline2"
            app:layout_constraintTop_toBottomOf="@+id/typelbl" />

        <EditText
            android:id="@+id/destinationFld"
            style="@style/AddTextFields"
            android:layout_marginTop="40dp"
            android:inputType="text"
            app:layout_constraintEnd_toStartOf="@+id/guideline3"
            app:layout_constraintHorizontal_bias="0.735"
            app:layout_constraintStart_toEndOf="@+id/destinationlbl"
            app:layout_constraintTop_toBottomOf="@+id/typeSpin" />

        <TextView
            android:id="@+id/picturelbl"
            android:layout_width="74dp"
            android:layout_height="50dp"
            android:layout_marginTop="36dp"
            android:text="Picture"
            android:textAppearance="@style/TextAppearance.AppCompat.Body2"
            android:textSize="20sp"
            app:layout_constraintEnd_toStartOf="@+id/guideline3"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="@+id/guideline2"
            app:layout_constraintTop_toBottomOf="@+id/destinationlbl" />

        <ImageButton
            android:id="@+id/picturebtn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="36dp"
            app:layout_constraintEnd_toStartOf="@+id/guideline3"
            app:layout_constraintHorizontal_bias="0.412"
            app:layout_constraintStart_toEndOf="@+id/picturelbl"
            app:layout_constraintTop_toBottomOf="@+id/destinationFld"
            app:srcCompat="@android:drawable/ic_menu_camera" />

        <TextView
            android:id="@+id/startpointlbl"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="28dp"
            android:layout_marginEnd="188dp"
            android:text="Starting Point"
            android:textAppearance="@style/TextAppearance.AppCompat.Body2"
            android:textSize="18sp"
            app:layout_constraintEnd_toStartOf="@+id/guideline3"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="@+id/guideline2"
            app:layout_constraintTop_toBottomOf="@+id/picturelbl" />

        <EditText
            android:id="@+id/startpointFld"
            style="@style/AddTextFields"
            android:layout_marginTop="16dp"
            android:inputType="text"
            app:layout_constraintEnd_toStartOf="@+id/guideline3"
            app:layout_constraintHorizontal_bias="0.75"
            app:layout_constraintStart_toEndOf="@+id/startpointlbl"
            app:layout_constraintTop_toBottomOf="@+id/picturebtn" />

        <TextView
            android:id="@+id/durationlbl"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="36dp"
            android:text="Duration"
            android:textAppearance="@style/TextAppearance.AppCompat.Body2"
            android:textSize="19sp"
            app:layout_constraintEnd_toStartOf="@+id/guideline3"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="@+id/guideline2"
            app:layout_constraintTop_toBottomOf="@+id/startpointlbl" />

        <Spinner
            android:id="@+id/durationSpin"
            style="@style/spinner"
            android:layout_width="133dp"
            android:layout_height="53dp"
            android:layout_marginTop="20dp"
            app:layout_constraintEnd_toStartOf="@+id/guideline3"
            app:layout_constraintHorizontal_bias="0.564"
            app:layout_constraintStart_toEndOf="@+id/durationlbl"
            app:layout_constraintTop_toBottomOf="@+id/startpointFld" />

        <TextView
            android:id="@+id/startdatelbl"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="84dp"
            android:text="ٍStart Date"
            android:textAppearance="@style/TextAppearance.AppCompat.Body2"
            android:textSize="18sp"
            app:layout_constraintEnd_toStartOf="@+id/guideline3"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="@+id/guideline2"
            app:layout_constraintTop_toBottomOf="@+id/durationlbl" />

        <DatePicker
            android:id="@+id/startDatePicker"
            android:layout_width="232dp"
            android:layout_height="345dp"
            android:layout_marginTop="12dp"
            android:scaleX="0.8"
            android:scaleY="0.8"
            app:layout_constraintEnd_toStartOf="@+id/guideline3"
            app:layout_constraintHorizontal_bias="1.0"
            app:layout_constraintStart_toEndOf="@+id/startdatelbl"
            app:layout_constraintTop_toBottomOf="@+id/durationSpin" />

        <TextView
            android:id="@+id/enddatelbl"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="352dp"
            android:text="End Date"
            android:textAppearance="@style/TextAppearance.AppCompat.Body2"
            android:textSize="18sp"
            app:layout_constraintEnd_toStartOf="@+id/guideline3"
            app:layout_constraintHorizontal_bias="0.007"
            app:layout_constraintStart_toStartOf="@+id/guideline2"
            app:layout_constraintTop_toBottomOf="@+id/startdatelbl" />

        <DatePicker
            android:id="@+id/endDatePicker"
            android:layout_width="232dp"
            android:layout_height="345dp"
            android:layout_marginTop="40dp"
            android:scaleX="0.8"
            android:scaleY="0.8"
            app:layout_constraintEnd_toStartOf="@+id/guideline3"
            app:layout_constraintHorizontal_bias="1.0"
            app:layout_constraintStart_toEndOf="@+id/enddatelbl"
            app:layout_constraintTop_toBottomOf="@+id/startDatePicker" />

        <TextView
            android:id="@+id/picelbl"
            android:layout_width="77dp"
            android:layout_height="31dp"
            android:layout_marginTop="296dp"
            android:layout_marginEnd="236dp"
            android:text="Price($)"
            android:textAppearance="@style/TextAppearance.AppCompat.Body2"
            android:textSize="18sp"
            app:layout_constraintEnd_toStartOf="@+id/guideline3"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="@+id/guideline2"
            app:layout_constraintTop_toBottomOf="@+id/enddatelbl" />

        <EditText
            android:id="@+id/priceFld"
            style="@style/AddTextFields"
            android:layout_marginTop="8dp"
            android:inputType="number"
            app:layout_constraintEnd_toStartOf="@+id/guideline3"
            app:layout_constraintHorizontal_bias="0.758"
            app:layout_constraintStart_toEndOf="@+id/picelbl"
            app:layout_constraintTop_toBottomOf="@+id/endDatePicker" />

        <TextView
            android:id="@+id/risklbl"
            android:layout_width="66dp"
            android:layout_height="30dp"
            android:layout_marginTop="64dp"
            android:text="Risk"
            android:textAppearance="@style/TextAppearance.AppCompat.Body2"
            android:textSize="20sp"
            app:layout_constraintEnd_toStartOf="@+id/guideline3"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="@+id/guideline2"
            app:layout_constraintTop_toTopOf="@+id/picelbl" />

        <SeekBar
            android:id="@+id/riskBar"
            android:layout_width="179dp"
            android:layout_height="29dp"
            android:layout_marginTop="44dp"
            app:layout_constraintEnd_toStartOf="@+id/guideline3"
            app:layout_constraintHorizontal_bias="0.674"
            app:layout_constraintStart_toEndOf="@+id/risklbl"
            app:layout_constraintTop_toBottomOf="@+id/priceFld" />

        <TextView
            android:id="@+id/descriptionlbl"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="40dp"
            android:layout_marginEnd="244dp"
            android:text="Description"
            android:textAppearance="@style/TextAppearance.AppCompat.Large"
            app:layout_constraintEnd_toStartOf="@+id/guideline3"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="@+id/guideline2"
            app:layout_constraintTop_toBottomOf="@+id/risklbl" />

        <EditText
            android:id="@+id/descriptionFld"
            style="@style/AddTextFields"
            android:layout_marginStart="12dp"
            android:layout_marginTop="24dp"
            android:gravity="start|top"
            android:inputType="textMultiLine"
            app:layout_constraintEnd_toStartOf="@+id/guideline3"
            app:layout_constraintHorizontal_bias="0.533"
            app:layout_constraintStart_toEndOf="@+id/descriptionlbl"
            app:layout_constraintTop_toBottomOf="@+id/riskBar" />

        <LinearLayout
            android:id="@+id/checkboxContainer"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginTop="20dp"
            app:layout_constraintTop_toBottomOf="@+id/descriptionFld"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent">

            <!-- First row of CheckBoxes (3 items) -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_horizontal">

                <CheckBox
                    android:id="@+id/grillingBox"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:button="@drawable/grill"
                    android:text="Grilling" />

                <CheckBox
                    android:id="@+id/campingBox"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:button="@drawable/camping"
                    android:text="Camping" />

                <CheckBox
                    android:id="@+id/swimBox"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:button="@drawable/swimming"
                    android:text="Swimming" />
            </LinearLayout>

            <!-- Second row of CheckBoxes (2 items) -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_horizontal">

                <CheckBox
                    android:id="@+id/suitableBox"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:button="@drawable/suitable"
                    android:text="Suitable for children" />

                <CheckBox
                    android:id="@+id/parkingBox"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:button="@drawable/park"
                    android:text="Parking" />
            </LinearLayout>
        </LinearLayout>

        <ImageButton
            android:id="@+id/insertbtn"
            android:layout_width="79dp"
            android:layout_height="73dp"
            android:layout_marginTop="20dp"
            app:layout_constraintEnd_toStartOf="@+id/guideline3"
            app:layout_constraintHorizontal_bias="0.492"
            app:layout_constraintStart_toStartOf="@+id/guideline2"
            app:layout_constraintTop_toBottomOf="@+id/checkboxContainer"
            app:srcCompat="@android:drawable/ic_input_add" />

        <TextView
            android:id="@+id/risklvl"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="140dp"
            android:text="Level: 0"
            app:layout_constraintBottom_toTopOf="@+id/riskBar"
            app:layout_constraintEnd_toStartOf="@+id/guideline3"
            app:layout_constraintHorizontal_bias="0.923"
            app:layout_constraintStart_toStartOf="@+id/guideline2"
            app:layout_constraintTop_toBottomOf="@+id/priceFld"
            app:layout_constraintVertical_bias="1.0" />

    </androidx.constraintlayout.widget.ConstraintLayout>

</ScrollView>